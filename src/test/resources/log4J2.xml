<?xml version="1.0" encoding="UTF-8"?>

<Cofiguration>
   <Appenders>
       <Console name="Console" target="SYSTEM_OUT">
           <PatternLayout pattern="%d{YYYY-MM-dd HH:mm:ss} [%t] %level %logger %msg %n">
           
             </PatternLayout>
       </Console>
  <file name= "fileLogger" fileName= "logs/automation.log" append = "false"></file>
  <PatternLayout pattern="%d{YYYY-MM-dd HH:mm:ss} [%t] %level %logger %msg %n"></PatternLayout>
</Appenders>

<loggers>

<root level = "info">
<AppenderRef ref = "Console"></AppenderRef>
<AppenderRef ref = "fileLogger"></AppenderRef>
</root>
</loggers>

</Cofiguration>